    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "isomorphic-dompurify": "^2.9.0",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "validator": "^13.11.0",
    "xss": "^1.0.14",
    "zod": "^4.1.11"
