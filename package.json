{
  "name": "devotional-generator",
  "version": "1.0.0",
  "description": "Thematic Devotional Generator - Create personalized, meaningful devotionals",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm outdated",
    "security:update": "npm update && npm audit fix"
  },
  "keywords": [
    "devotional",
    "spiritual",
    "faith",
    "bible",
    "nextjs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
